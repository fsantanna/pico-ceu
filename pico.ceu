native `pico_init(1);`
defer {
    native `pico_init(0);`
}

;; INPUT

var pico_input_delay
set pico_input_delay = func (ms) {
    `pico_input_delay($ms.Number);`
}

var pico_input_event
set pico_input_event = func (type) {
    var tp
    var v1
    var v2
    var v3
    set tp = 0
    set v1 = 0
    set v2 = 0
    set v3 = 0
    native ```
        SDL_Event evt;
        pico_input_event(&evt,$type.Number);
        $tp.Number = evt.type;
        switch (evt.type) {
            case SDL_KEYDOWN:
                $v1.Number = evt.key.state;
                $v2.Number = evt.key.keysym.sym;
                break;
            case SDL_MOUSEBUTTONDOWN:
                $v1.Number = evt.button.button;
                $v2.Number = evt.button.x;
                $v3.Number = evt.button.y;
                break;
        }
    ```
    [tp,v1,v2,v3]
}

var pico_input_event_timeout
set pico_input_event_timeout = func (type,time) {
    var tp
    var v1
    var v2
    var v3
    set tp = 0
    set v1 = 0
    set v2 = 0
    set v3 = 0
    native ```
        SDL_Event evt;
        pico_input_event_timeout(&evt,$type.Number,$time.Number);
        $tp.Number = evt.type;
        switch (evt.type) {
            case SDL_KEYDOWN:
                $v1.Number = evt.key.state;
                $v2.Number = evt.key.keysym.sym;
                break;
            case SDL_MOUSEBUTTONDOWN:
                $v1.Number = evt.button.button;
                $v2.Number = evt.button.x;
                $v3.Number = evt.button.y;
                break;
        }
    ```
    [tp,v1,v2,v3]
}

