;; LOOP

var EVT
var pico_loop
set pico_loop = func () {
    pico_state_set_auto(false)
    var old
    set old = `#number SDL_GetTicks()`
    while true {
        var now
        set now = `#number SDL_GetTicks()`
        var togo
        set togo = 40 - (now-old)
        if togo <= 0 {
            set EVT = 40
            broadcast #frame
            pico_output_clear()
            broadcast #draw
            pico_output_present()
            set old = togo + now
        } else {
            set EVT = pico_input_event_timeout(`#number SDL_ANY`,togo)
            if EVT[0] /= 0 {
                broadcast #sdl
            }
        }
    }
}
