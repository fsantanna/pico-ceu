#include "../pico.ce"

output pico <.USet_Title _("pico-Ce: Mouse")>: TPico

loop {
    var e = input pico <.UEvent _SDL_MOUSEBUTTONDOWN>: TPico: TEvent

    var button = e!UMouseButtonDown.1
    if _($button == SDL_BUTTON_LEFT) {
        output pico <.USet_Color_Draw [_255,_255,_255,_255]>: TPico
    } else {
        output pico <.USet_Color_Draw [_0,_0,_0,_255]>: TPico
    }
    output pico <.UDraw_Pixel e!UMouseButtonDown.2>: TPico
}
