^["pico.ceu"]

pico-state-set-title("pico-Ceu: Parallel Across")

coro F (pos:XY, vel:XY) {
    while (true) {
        pico-output-draw-pixel(pos)
        yield ()
        set pos.x = pos.x + vel.x
        set pos.y = pos.y + vel.y
    }
}

val x = spawn F ([-25,25],[1,-1])
val y = spawn F ([-25,-25],[1,1])
resume x()
resume y()

while (true) {
    pico-input-delay(100)
    resume x()
    resume y()
}
