^["pico.ceu"]

pico_state_set_title(`:pointer "pico-Ceu: Parallel Across"`)

var f = task (pos,vel) {
    while (true) {
        pico_output_draw_pixel(pos[0],pos[1])
        yield ()
        set pos[0] = pos[0] + vel[0]
        set pos[1] = pos[1] + vel[1]
    }
}

var x = spawn f ([-25,25],[1,-1])
var y = spawn f ([-25,-25],[1,1])
resume x()
resume y()

while (true) {
    pico_input_delay(100)
    resume x()
    resume y()
}
