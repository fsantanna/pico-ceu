^"prelude.ceu"
^"int.ceu"
^"pico.ceu"

output Pico.Set.Title _("pico-Ce: Across")

spawn {
    var i: _int = _(-25)
    loop {
        output Pico.Draw.Pixel [i,i]
        input Pico.Delay _100
        if _($i == 25) {
            break
        }
        set i = _($i + 1)
    }

    input Pico.Event.Forever _SDL_ANY
}
