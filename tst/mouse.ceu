^"prelude.ceu"
^"int.ceu"
^"pico.ceu"

output Pico.Set.Title _("pico-Ce: Mouse")

spawn {
    loop {
        var e: Event = input Pico.Event.Forever _SDL_MOUSEBUTTONDOWN

        var button = e!Mouse!Button!Down.but
        if _($button == SDL_BUTTON_LEFT) {
            output Pico.Set.Color.Draw [_255,_255,_255,_255]
        } else {
            output Pico.Set.Color.Draw [_0,_0,_0,_255]
        }
        output Pico.Draw.Pixel e!Mouse!Button!Down.pos
    }
}
