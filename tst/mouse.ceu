^"int.ceu"
^"pico.ceu"

output pico Pico.Set_Title _("pico-Ce: Mouse")

loop {
    var e: Event = input pico Pico.Event _SDL_MOUSEBUTTONDOWN

    var button = e!MouseButtonDown.1
    if _($button == SDL_BUTTON_LEFT) {
        output pico Pico.Set_Color_Draw [_255,_255,_255,_255]
    } else {
        output pico Pico.Set_Color_Draw [_0,_0,_0,_255]
    }
    output pico Pico.Draw_Pixel e!MouseButtonDown.2
}
