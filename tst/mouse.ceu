^["pico.ceu"]

;;output Pico.Set.Title _("pico-Ce: Mouse")

while true {
    var evt
    set evt = ceu_input_event(native { return SDL_MOUSEBUTTONDOWN; })
    if evt[1] == native{return SDL_BUTTON_LEFT;} {
        ceu_state_set_color_draw(255,255,255,255)
    } else {
        ceu_state_set_color_draw(0,0,0,255)
    }
    ceu_output_draw_pixel(evt[2],evt[3])
}
