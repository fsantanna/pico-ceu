^"int.ceu"
^"pico.ceu"

output pico TPico.USet_Title _("pico-Ce: Mouse")

loop {
    var e: Event = input pico TPico.UEvent _SDL_MOUSEBUTTONDOWN

    var button = e!UMouseButtonDown.1
    if _($button == SDL_BUTTON_LEFT) {
        output pico TPico.USet_Color_Draw [_255,_255,_255,_255]
    } else {
        output pico TPico.USet_Color_Draw [_0,_0,_0,_255]
    }
    output pico TPico.UDraw_Pixel e!UMouseButtonDown.2
}
