^["@/pico/pico.ceu"]

pico.output.show(false)

spawn {
    par-or {
        await <10:s>
    } with {
        var n = 0
        defer {
            println("I counted ", n)    ;; invariably outputs 9
        }
        every <1:s> {
            set n = n + 1
        }
    }
    pico.quit()
}

pico.loop()
